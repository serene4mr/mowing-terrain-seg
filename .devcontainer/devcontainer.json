{
  "name": "mowing-terrain-seg-dev-env",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "USERNAME": "${localEnv:USER}"
    }
  },

  "remoteUser": "serene",
  "updateRemoteUserUID": true,

  "runArgs": [
    "--privileged",
    "--name", "mowing-terrain-seg-dev-env",
    "--net", "host",
    "--gpus", "all",
    "--shm-size=16g",
    "-e", "PYTHONUNBUFFERED=1",
    "-e", "DISPLAY=:0",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw",
    "-v", "/dev:/dev"
  ],

  "postCreateCommand": "pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.autopep8"
      ]
    }
  }
}
  